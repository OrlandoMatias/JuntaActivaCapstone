# Configuración de Base de Datos
# Por defecto usa SQLite. Para usar MySQL con XAMPP, descomenta y configura:

# Opción 1: Usuario personalizado (más seguro)
# DB_ENGINE=mysql
# DB_NAME=junta_vecinos
# DB_USER=junta_user
# DB_PASSWORD=junta2024
# DB_HOST=localhost
# DB_PORT=3306

# Opción 2: Usuario root de XAMPP (más simple)
# DB_ENGINE=mysql
# DB_NAME=junta_vecinos
# DB_USER=root
# DB_PASSWORD=
# DB_HOST=localhost
# DB_PORT=3306

# Nota: En XAMPP, el usuario root NO tiene contraseña por defecto (déjalo vacío)

# Configuración de Email (Opcional)
# Para usar el envío real de correos, configura estas variables

# Gmail SMTP (requiere "App Password" si tienes 2FA activado)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_contraseña_de_aplicacion
DEFAULT_FROM_EMAIL=noreply@juntavecinos.cl

# Nota: En modo DEBUG=True, los emails se imprimen en la consola
# Para producción, cambia DEBUG=False y configura las variables de email
